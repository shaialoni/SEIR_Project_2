{% layout 'layout.liquid' %}

{% block content %}

    <h2 class="card-header">{{data.title}}</h2>
        <div class="card-body">
            <div class="card" style="width: 18rem">
                <p class="card-text">Category: {{data.category}}</p>
                <p class="card-text">Date: {{data.date}}</p>
                <p class="card-text">Heb Date: {{data.hdate}}</p>

                <p class="card-text">Memo: {{data.memo}}</p>
                <p class="card-text">Hebrew: {{data.hebrew}}</p>
                
                <p class="card-text">Yomtov: 
                    {% if data.yomtov %} 
                    Yes 
                    {% else %} 
                    No 
                    {% endif %}
                </p>
            </div>
            <div class="btn-group">
                <form action="/cal/personal{{event._id}}?_method=DELETE" method="POST">
                    <a href="/cal" class="btn btn-primary">Back to main page</a> 
                    <a href="/cal/personal{{event._id}}/edit" class="btn btn-primary">Edit Fruit</a>
                    <input type="submit" value="DELETE" class="btn btn-danger">
                </form>
            </div>
        </div>


              
{% endblock %}