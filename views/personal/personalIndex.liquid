{% layout 'layout.liquid' %}

{% block content %}

<div class="card" style="width: 18rem;">
    <h1>{{cal.name}}</h1>
    <div class="card-header">
        <h3>Upcoming events</h3>
    </div>
    <ul class="list-group">
        {% for data in data %}
        <li class="list-group-item">{{data.date}}</li>
        <li class="list-group-item"><a href="/cal/{{data._id}}">{{data.title}}</a></li>
        {% endfor %}
    </ul>
</div>

{% endblock %}