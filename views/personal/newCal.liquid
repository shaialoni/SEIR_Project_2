{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">

    <form action="/personal/new" method="POST" width="300">
        <fieldset>
            <legend>Create a Personal Calendar</legend>
            <label class="form-label">Name:</label>
            <input 
                class="form-control" 
                type="text" 
                name="name" 
                placeholder="enter name for calendar"
            >
            <label class=form-label>Description:</label>
            <input 
                class="form-control" 
                type="text" 
                name="description" 
                placeholder="description"
            >   
        </fieldset>
        <input 
            type="submit" 
            value="Create New Calendar" 
            class="btn"
        >
    </form>

</div>
{% endblock %}

